<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview_instructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_infodialog"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:clickable="false"
        android:focusable="false"
        android:listSelector="#00000000"/>

    <TextView
        android:id="@+id/textView_infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/browserBar"
        android:fontFamily="@font/portico"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="ISTRUZIONI"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>